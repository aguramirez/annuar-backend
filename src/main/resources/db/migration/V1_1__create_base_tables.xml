<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">

    <changeSet id="1.1.0" author="developer">
        <!-- Tabla de Usuarios -->
        <createTable tableName="users">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password_hash" type="varchar(255)"/>
            <column name="first_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="varchar(50)"/>
            <column name="profile_image" type="varchar(255)"/>
            <column name="loyalty_points" type="integer" defaultValue="0"/>
            <column name="auth_provider" type="varchar(50)"/>
            <column name="auth_provider_id" type="varchar(255)"/>
            <column name="role" type="varchar(20)" defaultValue="CUSTOMER">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp with time zone" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp with time zone" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="last_login" type="timestamp with time zone"/>
            <column name="status" type="varchar(20)" defaultValue="ACTIVE"/>
            <column name="marketing_consent" type="boolean" defaultValueBoolean="false"/>
        </createTable>
    </changeSet>
    
    <changeSet id="1.1.1" author="developer">
        <!-- Tabla de Cines -->
        <createTable tableName="cinemas">
            <column name="id" type="uuid" defaultValueComputed="uuid_generate_v4()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="state" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="postal_code" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="website" type="varchar(255)"/>
            <column name="logo_url" type="varchar(255)"/>
            <column name="active" type="boolean" defaultValueBoolean="true"/>
            <column name="created_at" type="timestamp with time zone" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp with time zone" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.1.2" author="developer">
        <!-- Tabla de Salas -->
        <createTable tableName="rooms">
            <column name="id" type="uuid" defaultValueComputed="uuid_generate_v4()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="cinema_id" type="uuid">
                <constraints nullable="false" foreignKeyName="fk_rooms_cinema" references="cinemas(id)" deleteCascade="true"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="capacity" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="room_type" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="is_accessible" type="boolean" defaultValueBoolean="true"/>
            <column name="status" type="varchar(20)" defaultValue="ACTIVE"/>
            <column name="created_at" type="timestamp with time zone" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp with time zone" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="rooms" columnNames="cinema_id, name" constraintName="uk_rooms_cinema_name"/>
    </changeSet>

    <changeSet id="1.1.3" author="developer">
        <!-- Tabla de Asientos -->
        <createTable tableName="seats">
            <column name="id" type="uuid" defaultValueComputed="uuid_generate_v4()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="room_id" type="uuid">
                <constraints nullable="false" foreignKeyName="fk_seats_room" references="rooms(id)" deleteCascade="true"/>
            </column>
            <column name="row" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="number" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="seat_type" type="varchar(50)" defaultValue="REGULAR"/>
            <column name="status" type="varchar(20)" defaultValue="ACTIVE"/>
            <column name="created_at" type="timestamp with time zone" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp with time zone" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="seats" columnNames="room_id, row, number" constraintName="uk_seats_room_row_number"/>
    </changeSet>

    <changeSet id="1.1.4" author="developer">
        <!-- Tabla de Películas -->
        <createTable tableName="movies">
            <column name="id" type="uuid" defaultValueComputed="uuid_generate_v4()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="original_title" type="varchar(255)"/>
            <column name="synopsis" type="text"/>
            <column name="duration_minutes" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="release_date" type="date"/>
            <column name="end_date" type="date"/>
            <column name="director" type="varchar(255)"/>
            <column name="cast" type="text"/>
            <column name="genre" type="varchar(100)"/>
            <column name="rating" type="varchar(20)"/>
            <column name="poster_url" type="varchar(255)"/>
            <column name="trailer_url" type="varchar(255)"/>
            <column name="language" type="varchar(50)"/>
            <column name="is_3d" type="boolean" defaultValueBoolean="false"/>
            <column name="is_subtitled" type="boolean" defaultValueBoolean="false"/>
            <column name="status" type="varchar(20)" defaultValue="ACTIVE"/>
            <column name="created_at" type="timestamp with time zone" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp with time zone" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    
    <!-- Continuando con las demás tablas... -->
    <changeSet id="1.1.5" author="developer">
        <!-- Tabla de Shows (Funciones) -->
        <createTable tableName="shows">
            <column name="id" type="uuid" defaultValueComputed="uuid_generate_v4()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="movie_id" type="uuid">
                <constraints nullable="false" foreignKeyName="fk_shows_movie" references="movies(id)" deleteCascade="true"/>
            </column>
            <column name="room_id" type="uuid">
                <constraints nullable="false" foreignKeyName="fk_shows_room" references="rooms(id)" deleteCascade="true"/>
            </column>
            <column name="start_time" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
            <column name="end_time" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
            <column name="is_3d" type="boolean" defaultValueBoolean="false"/>
            <column name="is_subtitled" type="boolean" defaultValueBoolean="false"/>
            <column name="language" type="varchar(50)"/>
            <column name="status" type="varchar(20)" defaultValue="SCHEDULED"/>
            <column name="created_at" type="timestamp with time zone" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp with time zone" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Las tablas restantes se agregarán en migraciones subsecuentes para mantener este archivo más legible -->
    
</databaseChangeLog>